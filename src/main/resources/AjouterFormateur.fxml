<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.AjouterFormateur"
            prefHeight="400.0" prefWidth="600.0">

    <GridPane hgap="10" vgap="10" alignment="CENTER" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">

        <!-- Titre -->
        <Label text="Ajouter un Formateur" style="-fx-font-size: 18px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.halignment="CENTER" />

        <!-- Nom -->
        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nomField" promptText="Nom" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-padding: 5px; -fx-background-radius: 5px;"/>

        <!-- Prénom -->
        <Label text="Prénom :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="prenomField" promptText="Prénom" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-padding: 5px; -fx-background-radius: 5px;"/>

        <!-- Email -->
        <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="emailField" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-padding: 5px; -fx-background-radius: 5px;"/>

        <!-- Téléphone -->
        <Label text="Téléphone :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="telephoneField" promptText="Téléphone" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-padding: 5px; -fx-background-radius: 5px;"/>

        <!-- Spécialité -->
        <Label text="Spécialité :" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="specialiteField" promptText="Spécialité" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-padding: 5px; -fx-background-radius: 5px;"/>

        <!-- Bouton Ajouter -->
        <Button text="Ajouter Formateur" onAction="#ajouterFormateur" GridPane.columnSpan="2" GridPane.rowIndex="6" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px; -fx-background-radius: 5px;"/>
    </GridPane>

</AnchorPane>
