<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Formateur.ModifierFormateur">
    <children>
        <!-- Titre -->
        <Label layoutX="174.0" layoutY="22.0" prefHeight="27.0" prefWidth="250.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Modifier une Formateur" />
        <!-- Champs de modification -->
        <Label layoutX="90.0" layoutY="93.0" text="Nom :" />
        <TextField fx:id="nomField" layoutX="170.0" layoutY="93.0" prefWidth="250" />

        <Label layoutX="85.0" layoutY="133.0" text="Prenom :" />
        <TextField fx:id="prenomField" layoutX="170.0" layoutY="138.0" prefWidth="250" />

        <Label layoutX="90.0" layoutY="183.0" text="Email : " />
        <TextField fx:id="emailField" layoutX="168.0" layoutY="179.0" prefWidth="250" />

        <Label layoutX="78.0" layoutY="230.0" text="Telephone :" />
        <TextField fx:id="telephoneField" layoutX="170.0" layoutY="226.0" prefWidth="250" />

        <Label layoutX="81.0" layoutY="280.0" text="Specialite :" />
        <TextField fx:id="specialiteField" layoutX="168.0" layoutY="276.0" prefWidth="250" />



        <!-- Boutons -->

        <Button layoutX="346.0" layoutY="404.0" mnemonicParsing="false" onAction="#modifierFormateur" text="Modifier" />
        <Button layoutX="217.0" layoutY="404.0" mnemonicParsing="false" onAction="#SupprimerFormateur" text="Supprimer" />
    </children>
</AnchorPane>
